---
// Henter parametrene fra Astro.props

const { variant = "primary", size = "medium" } = Astro.props;

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper

const buttonStyling = "uppercase transition-transform duration-100 transform scale-100 hover:scale-102 mt-4 shadow-md";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter

const variantClasses = {
  //   primary: "text-yellow-50 bg-red-950 hover:bg-yellow-50 hover:text-red-950",

  primary: "bg-primary-yellow text-primary-red hover:bg-primary-red hover:text-primary-yellow font-display uppercase font-medium",

  secondary: "bg-primary-blue text-primary-red hover:bg-primary-red hover:text-primary-yellow font-display uppercase font-medium",

  third: "bg-primary-red text-primary-yellow hover:bg-primary-yellow hover:text-primary-red font-display uppercase font-medium",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.

const sizeClasses = {
  medium: "px-8 py-3 text-md",

  small: "px-6 py-3 text-sm",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
